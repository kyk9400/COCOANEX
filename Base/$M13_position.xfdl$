      <BindItem id="item4" compid="div_modif.form.edt_code" propid="value" datasetid="ds_position" columnid="code"/>
      <BindItem id="item5" compid="div_modif.form.edt_name" propid="value" datasetid="ds_position" columnid="name"/>
